/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.h1{
  padding-top: 10px;
  font-size: 25px;
  font-weight: lighter;
  font-family: "KAITI";
  float: left;
}
.h2{
  padding-top: 8px;
  font-size: 22px;
  font-weight: 260;
  font-family: "华文行楷";
}
.item{
  display: flex;
  flex-direction: row;
}
.icon{
  float: left;
  width: 45px;
  height: 45px;
}
.icon_small{
  float: left;
  width: 30px;
  height: 30px;
}



/** home.wxss **/
.page-bottom{
  height: 100%;
  width: 750rpx;
  position:flex; 
  background-color:white;
  z-index: 0;
}
.page-content{
  padding-top: 50rpx;
}
.page-top{
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color: white;
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
.btn{
  position: absolute;
  width: 68rpx;
  height: 38rpx;
  left: 20rpx;
  top: 20rpx;
}
.img{
  width:100%;
  height:40%;
}
.c-state1{
  transform: rotate(0deg) scale(1) translate(60%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(60%,0%); 
}
.wc{
  color: white;
  padding: 30rpx 0 30rpx 40rpx;
}
.func{
  height: 100%;
  width: 100%
}


.hr{
  width: 100%;
  height: 15px;
  background-color: #F4F5F6;
}
.line{
  border: 1px solid #cccccc;
  opacity: 0.2;
}
.order{
  padding-top: 15px;
  padding-left: 15px;
  padding-bottom: 15px;
  font-size: 15px;
}
.detail{
  font-size: 15px;
  padding-top: 15px;
  padding-bottom: 15px;
  color: #888888;
  text-align: right;
}
.menu{
  height: 30%;
}
